{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:///app/collections.gfbio.org/openapi/collection_requirements.json",
  "title": "Collection",
  "description": "Schema based on the _search.json sample of pansimple type",
  "type": "object",
  "properties": {
    "took": {
      "type": "number"
    },
    "hits": {
      "type": "object",
      "properties": {
        "required": [
          "hits"
        ],
        "total": {
          "type": "number"
        },
        "hits": {
          "description": "The payload contains the collected one or more data identifiers",
          "type": "array",
          "items": {
            "$ref": "#/$defs/hits"
          }
        }
      }
    }
  },
  "required": [
    "hits"
  ],
  "$defs": {
    "hits": {
      "type": "object",
      "properties": {
        "required": [
          "_id",
          "_source"
        ],
        "_id": {
          "description": "ID of type URI regex",
          "type": "string",
          "minLength": 6
        },
        "_source": {
          "type": "object"
        }
      }
    }
  }
}
