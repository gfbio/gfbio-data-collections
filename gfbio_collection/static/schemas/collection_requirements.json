{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://collections.gfbio.org/openapi/pansimple.json",
  "title": "Collection",
  "description": "Schema based on the _search.json sample of pansimple type",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "string"
    },
    "hits": {
      "type": "object",
      "properties": {
        "max_score": {
          "type": "number"
        },
        "hits": {
          "description": "The payload contains the collected one or more data identifiers",
          "type": "array",
          "items": {
            "$ref": "#/$defs/collection_data"
          },
          "minItems": 1
        }
      }
    },
    "$defs": {
      "collection_data": {
        "type": "object",
        "properties": {
          "required": [
            "_id",
            "_source"
          ],
          "_id": {
            "description": "ID of type URI regex",
            "type": "string",
            "minLength": 6
          },
          "_source": {
            "type": "object"
          }
        }
      }
    }
  }
}
