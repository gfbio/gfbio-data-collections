{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://collections.gfbio.org/openapi/collection.json",
  "title": "Collection",
  "description": "A simple collection",
  "type": "object",
  "properties": {
    "collection_identifier": {
      "description": "The unique identifier of the collection",
      "type": "string",
      "minLength": 6
    },
    "collection_name": {
      "description": "The name of the collection",
      "type": "string",
      "minLength": 6
    },
    "collection_payload": {
      "description": "The payload contains the collected data identifiers",
      "type": "array",
      "items": {
        "type": "object"
      },
      "minItems": 1
    }
  },
  "required": [
    "collection_identifier",
    "collection_name",
    "collection_payload"
  ]
}
