{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://collections.gfbio.org/openapi/pansimple.json",
  "title": "pansimple",
  "description": "Schema based on the _search.json sample of type pansimple",
  "type": "object",
  "properties": {
    "took": {
      "type": "number"
    },
    "hits": {
      "description": "The payload contains the collected data identifiers",
      "type": "array",
      "items": {
        "$ref": "#/$defs/hits"
      }
    },
    "minItems": 1
  },
  "$defs": {
    "hits": {
      "type": "object",
      "properties": {
        "required": [
          "_id",
          "_source"
        ],
        "_id": {
          "description": "ID of type URI regex",
          "type": "string",
          "minLength": 6
        },
        "_source": {
          "type": "object"
        }
      }
    }
  }
}
